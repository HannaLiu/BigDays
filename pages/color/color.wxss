/* pages/color/color.wxss */

.input.right-half {
  text-align: right;
  margin-bottom: 0;
  padding: 0;
}

.palette {
  width: 100%;
  height: 100%;
  overflow: hidden;
  overflow-y: auto;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.subpalette {
  width: 500rpx;
  height: 800rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -500rpx;
  margin-left: -250rpx;
}

.input {
  line-height: 50rpx;
}

.one-color {
  margin: 0;
  vertical-align: middle;
}

.color-slider {
  margin: 0 30rpx 40rpx;
}

.showColor {
  width: 500rpx;
  height: 240rpx;
  background: #ff9e24;
  margin-bottom: 80rpx;
}

.showColorHex {
  margin-left: 60rpx;
  margin-bottom: 60rpx;
  font-size: 24rpx;
}

.half-btn {
  width: 40%;
  display: inline-block;
  margin: 20rpx 5%;
}

button.cancel {
  background-color: #fff;
  color: #333;
}

.view-font {
  display: inline-block;
  color: #fff;
  padding: 40rpx 30rpx;
  font-size: 24rpx;
}
